<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:paddingTop="5dp"
        android:text="Gareth Brennan"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/name"
        android:layout_marginTop="15dp"

        app:srcCompat="@drawable/profile_background" />
    <View

        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_height="5dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track:    Android"
        android:layout_below="@+id/divider"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:paddingTop="50dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20dp" />

    <TextView
    android:id="@+id/country"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Country:    South Africa"
    android:layout_below="@+id/track"
    android:layout_centerInParent="true"
    android:fontFamily="serif"
    android:paddingTop="20dp"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textSize="20dp" />

    <TextView
    android:id="@+id/email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Email:    garethbre08@gmail.com"
    android:layout_below="@+id/country"
    android:layout_centerInParent="true"
    android:fontFamily="serif"
    android:paddingTop="20dp"
    android:textAlignment="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textSize="20dp" />

    <TextView
        android:id="@+id/Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:    0781459573"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:fontFamily="serif"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20dp" />


</RelativeLayout>